<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edição de categorias</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input class="form-control" type="text" name="title" value="<%= category.title %>" placeholder="Define o título da categoria">
                <input type="hidden" name="id" value="<%= category.id %>">
                <br>
                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>
    </div>
</div>

